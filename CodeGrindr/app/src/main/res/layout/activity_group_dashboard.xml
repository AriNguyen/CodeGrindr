<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:longClickable="false"
        app:itemIconSize="24dp"
        app:itemIconTint="@color/colorAccent"
        app:itemTextColor="#000000"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <RelativeLayout
        android:id="@+id/groupLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <HorizontalScrollView
            android:id="@+id/bottomLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/groupCardView1"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/groupCardView2"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/groupCardView3"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/groupCardView4"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/groupCardView5"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/groupCardView6"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/groupCardView7"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/groupCardView8"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/groupCardView9"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/groupCardView10"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />


            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupLayout">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/memberCardView1"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" >

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="89dp"
                        android:layout_height="91dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        tools:srcCompat="@drawable/circle_user" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/memberCardView2"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/memberCardView3"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/memberCardView4"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/memberCardView5"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/memberCardView6"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/memberCardView7"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/memberCardView8"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/memberCardView9"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/memberCardView10"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#B5A3ED"
                    app:cardCornerRadius="20dp" />


            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="Talents Looking for Group"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupLayout" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="Groups Looking for Talents"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/groupLayout"
        app:layout_constraintStart_toStartOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>